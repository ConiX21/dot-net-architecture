@model PersonViewModel

@{
    ViewData["Title"] = "Edit person";
}
<div class="section-global row">
    <div class="content col-lg-8 col-lg-offset-2">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Edit">
            <div class="form-horizontal">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Person.IdPerson" />
                <div class="form-group">
                    <label asp-for="Person.Firstname" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <input asp-for="Person.Firstname" class="form-control" />
                        <span asp-validation-for="Person.Firstname" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Person.Lastname" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <input asp-for="Person.Lastname" class="form-control" />
                        <span asp-validation-for="Person.Lastname" class="text-danger" />
                    </div>
                </div>
                @*<div class="form-group">
                    <label asp-for="Gender" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <input asp-for="Gender" class="form-control" />
                        <span asp-validation-for="Gender" class="text-danger" />
                    </div>
                </div>*@
                <div class="form-group">
                    <label asp-for="Person.Gender" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                       <select asp-items="@(new SelectList(Model.Genders,"GenderChar","Description"))" asp-for="Person.Gender" class="form-control"></select> 
                        <span asp-validation-for="Person.Gender" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Person.Address" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">

                        <textarea asp-for="Person.Address" class="form-control"></textarea>
                        <span asp-validation-for="Person.Address" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Person.City" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <input asp-for="Person.City" class="form-control" />
                        <span asp-validation-for="Person.City" class="text-danger" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Person.Zipcode" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <input asp-for="Person.Zipcode" class="form-control zipcode" />
                        <span asp-validation-for="Person.Zipcode" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Person.Email" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <input asp-for="Person.Email" class="form-control" />
                        <span asp-validation-for="Person.Email" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-ok"></span> Save</button>
                    </div>
                </div>
            </div>
        </form>


        <div>
            <a asp-action="Index" class="btn btn-danger"><span class="glyphicon glyphicon-chevron-left"></span> Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
</div>