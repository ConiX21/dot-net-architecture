@model Contact.DATA.Models.Person

@{
    ViewData["Title"] = "Create new person";
}

<div class="section-global row">
    <div class="content col-lg-8 col-lg-offset-2">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Create">
            <div class="form-horizontal">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Firstname" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <input asp-for="Firstname" class="form-control" />
                        <span asp-validation-for="Firstname" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Lastname" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <input asp-for="Lastname" class="form-control" />
                        <span asp-validation-for="Lastname" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <input asp-for="Gender" class="form-control" />
                        <span asp-validation-for="Gender" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">

                        <textarea asp-for="Address" class="form-control"></textarea>
                        <span asp-validation-for="Address" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Zipcode" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <input asp-for="Zipcode" class="form-control zipcode" />
                        <span asp-validation-for="Zipcode" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-ok"></span> Create</button>
                    </div>
                </div>
            </div>
        </form>

        <div>
            <a asp-action="Index" class="btn btn-danger"><span class="glyphicon glyphicon-chevron-left"></span> Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
</div>
